<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="min-h-screen bg-blue-600 flex justify-center items-center">
	
	<div class="py-12 px-12 bg-white rounded-2xl shadow-xl z-20">

    <%= render "devise/shared/error_messages", resource: resource %>

		<div>
			<h1 class="text-3xl font-extralight text-center mb-4 cursor-pointer">Sign up</h1>
			<p class="text-center text-sm mb-8 font-normal text-gray-700 tracking-wide cursor-pointer">If you do not have an account please contact your administrator for an invite</p>
		</div>
		<div class="space-y-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block text-sm py-3 px-4 rounded-lg w-full border outline-none focus:outline-none focus:border-blue-600", placeholder: "Email Address" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "block text-sm py-3 px-4 rounded-lg w-full border outline-none focus:outline-none focus:border-blue-600", placeholder: "Password" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>
			<div class="flex flex-col flex-wrap place-items-center">
        <%= f.submit "Sign up", class: "py-3 mt-3 w-64 text-xl text-white bg-blue-600 rounded-2xl cursor-pointer uppercase" %>
        <br>
			</div>
      <div class="flex items-center justify-center space-x-2">
        <span class="h-px w-full bg-gray-300 mb-10"></span>
      </div>
      <div class="flex justify-between ">
        <%= render "devise/shared/links" %>
      </div>
		</div>
	</div>

<% end %>


